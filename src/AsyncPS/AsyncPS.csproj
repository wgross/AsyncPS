<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <!-- NuGet package properties -->
    <PackageId>AsyncPS</PackageId>
    <Version>0.1.0</Version>
    <Authors>Wolfgang Groß</Authors>
    <Description>Asynchronous PowerShell Cmdlet base class for PowerShell 7.5+</Description>
    <PackageTags>PowerShell;Async;Cmdlet;Utilities</PackageTags>
    <PackageProjectUrl>https://github.com/wgross/AsyncPS</PackageProjectUrl>
    <RepositoryUrl>https://github.com/wgross/AsyncPS</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Copyright>Copyright © YourName 2025</Copyright>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.PowerShell.SDK" Version="7.5.4" />
  </ItemGroup>

</Project>
